<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--需求-->
        <LinearLayout
            android:id="@+id/layout0"
            style="@style/home_bottom_bar_container">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv0"
                    style="@style/home_bottom_bar_iv"
                    android:alpha="1"
                    android:src="@drawable/icon_tab1_unselected" />

                <ImageView
                    android:id="@+id/iv0_selected"
                    style="@style/home_bottom_bar_iv"
                    android:alpha="0"
                    android:src="@drawable/icon_tab1_selected" />

                <ImageView
                    android:id="@+id/reddot0"
                    style="@style/home_bottom_bar_reddot"
                    android:visibility="invisible" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv0"
                style="@style/home_bottom_bar_tv"
                android:text="@string/tab_requirement" />
        </LinearLayout>


        <!--服务-->
        <LinearLayout
            android:id="@+id/layout1"
            style="@style/home_bottom_bar_container">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv1"
                    style="@style/home_bottom_bar_iv"
                    android:alpha="1"
                    android:src="@drawable/icon_tab2_unselected" />

                <ImageView
                    android:id="@+id/iv1_selected"
                    style="@style/home_bottom_bar_iv"

                    android:alpha="0"
                    android:src="@drawable/icon_tab2_selected" />

                <ImageView
                    android:id="@+id/reddot1"
                    style="@style/home_bottom_bar_reddot"
                    android:visibility="invisible"></ImageView>
            </FrameLayout>

            <TextView
                android:id="@+id/tv1"
                style="@style/home_bottom_bar_tv"
                android:text="@string/tab_service" />
        </LinearLayout>


        <!--个人-->
        <LinearLayout
            android:id="@+id/layout2"
            style="@style/home_bottom_bar_container">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv2"
                    style="@style/home_bottom_bar_iv"
                    android:alpha="1"
                    android:src="@drawable/icon_tab1_unselected" />

                <ImageView
                    android:id="@+id/iv2_selected"
                    style="@style/home_bottom_bar_iv"
                    android:alpha="0"
                    android:src="@drawable/icon_tab1_selected" />

                <ImageView
                    android:id="@+id/reddot2"
                    style="@style/home_bottom_bar_reddot"
                    android:visibility="invisible" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv2"
                style="@style/home_bottom_bar_tv"
                android:text="@string/tab_individual" />

        </LinearLayout>



        <!--机构-->
        <LinearLayout
            android:id="@+id/layout3"
            style="@style/home_bottom_bar_container">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv3"
                    style="@style/home_bottom_bar_iv"
                    android:alpha="1"
                    android:src="@drawable/icon_tab3_unselected" />

                <ImageView
                    android:id="@+id/iv3_selected"
                    style="@style/home_bottom_bar_iv"
                    android:alpha="0"
                    android:src="@drawable/icon_tab3_selected" />

                <ImageView
                    android:id="@+id/reddot3"
                    style="@style/home_bottom_bar_reddot"
                    android:visibility="invisible" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv3"
                style="@style/home_bottom_bar_tv"
                android:text="@string/tab_department" />

        </LinearLayout>

        <!--我的-->
        <LinearLayout
            android:id="@+id/layout4"
            style="@style/home_bottom_bar_container">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv4"
                    style="@style/home_bottom_bar_iv"
                    android:alpha="1"
                    android:src="@drawable/icon_tab3_unselected" />

                <ImageView
                    android:id="@+id/iv4_selected"
                    style="@style/home_bottom_bar_iv"
                    android:alpha="0"
                    android:src="@drawable/icon_tab3_selected" />

                <ImageView
                    android:id="@+id/reddot4"
                    style="@style/home_bottom_bar_reddot"
                    android:visibility="invisible" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv4"
                style="@style/home_bottom_bar_tv"
                android:text="@string/tab_me" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>